{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "finalboss",
  "version": "0.1.0",
  "identifier": "app.final.boss",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "finalboss",
        "width": 1900,
        "height": 1200
      }
      
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "fs-capability",
          "description": "Filesystem access",
          "windows": ["main"],
          "permissions": [
            "fs:allow-read-text-file",
            "fs:allow-write-text-file",
            "fs:allow-read-file",
            "fs:allow-write-file",
            "fs:allow-create",
            "fs:allow-exists"
          ],
          "allow": [
            {
              "path": "src/bots/user-bots-config.json"
            },
            {
              "path": "src/bots"
            },
            {
              "path": "**"
            }
          ]
        }
      ]
    }
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
